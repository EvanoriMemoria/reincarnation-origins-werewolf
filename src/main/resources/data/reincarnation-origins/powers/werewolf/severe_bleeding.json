{
  "type": "origins:multiple",
  "dot": {
    "type": "origins:action_over_time",
    "entity_action": {
      "type": "origins:damage",
      "amount": 4,
      "source": {
        "name": "minecraft:on_fire",
        "bypasses_armor": true,
        "unblockable": true
      },
      "damage_type": "minecraft:on_fire"
    },
    "interval": 20
  },
  "timer": {
    "type": "origins:cooldown",
    "cooldown": 100,
    "hud_render": {
      "should_render": true,
      "bar_index": 1
    }
  },
  "trigger": {
    "type": "origins:action_on_callback",
    "entity_action_gained": {
      "type": "origins:trigger_cooldown",
      "power": "reincarnation-origins:werewolf/severe_bleeding_timer"
    }
  },
  "timer_check": {
    "type": "origins:action_over_time",
    "entity_action": {
      "type": "origins:execute_command",
      "command": "power revoke @s reincarnation-origins:werewolf/severe_bleeding"
    },
    "interval": 20,
    "condition": {
      "type": "origins:resource",
      "resource": "reincarnation-origins:werewolf/severe_bleeding_timer",
      "comparison": "==",
      "compare_to": 0
    }
  },
  "particles": {
    "type": "origins:particle",
    "particle": "minecraft:falling_lava",
    "frequency": 12
  },
  "on_death": {
    "type": "origins:action_when_damage_taken",
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:execute_command",
          "command": "resource set @s reincarnation-origins:werewolf/lithe/leap_active 600"
        },
        {
          "type": "origins:execute_command",
          "command": "advancement grant @s only reincarnation-origins:werewolf/lithe/reset_cooldown"
        },
        {
          "type": "origins:execute_command",
          "command": "power revoke @s reincarnation-origins:werewolf/severe_bleeding"
        }
      ]
    },
    "damage_condition": {
      "type": "origins:amount",
      "comparison": "==",
      "compare_to": 4
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:health",
          "comparison": "==",
          "compare_to": 0
        },
        {
          "type": "origins:resource",
          "resource": "reincarnation-origins:werewolf/lithe/leap_active",
          "comparison": "!=",
          "compare_to": 0
        }
      ]
    }
  }
}
